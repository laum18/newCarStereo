<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.up.cs371.laum18.newcarstereo.MainActivity">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#de000000"
    android:weightSum="1"
    android:id="@+id/Bottom">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power"
            android:id="@+id/Power"
            android:textOn="On"
            android:textOff="Off"
            android:textSize="40dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PausePlay"
            android:id="@+id/PausePlay"
            android:textOn="Pause"
            android:textOff="Play"
            android:textSize="40dp"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/Stop"
            android:textSize="40dp"
            android:layout_row="0"
            android:layout_column="4" />

        <Space
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:id="@+id/TrackForward"
            android:textSize="40dp"
            android:layout_row="0"
            android:layout_column="6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:id="@+id/TrackRepeat"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <SeekBar
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/Volume"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:minHeight="30dp"
            android:minWidth="50dp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button1"
            android:textSize="60dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button2"
            android:textSize="60dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button3"
            android:textSize="60dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button4"
            android:textSize="60dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/button5"
            android:textSize="60dp"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="475dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/CurrentVolume"
            android:text="Current Volume"
            android:textSize="60dp"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#ff757575">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eject"
        android:id="@+id/Eject"
        android:layout_gravity="bottom"
        android:textSize="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/CdSlot"
        android:background="#000000"
        android:layout_gravity="bottom" />

</LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/AMFM"
        android:checked="false"
        android:clickable="true"
        android:textSize="100dp"
        android:textOn="AM"
        android:textOff="FM"
        android:showText="true"
        android:splitTrack="false"
        android:minHeight="50dp"
        android:maxWidth="50dp" />

    <TextView
        android:layout_width="586dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Display"
        android:id="@+id/textView"
        android:textSize="120dp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tuner"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:minHeight="30dp"
        android:max="1170" />

</LinearLayout>

</RelativeLayout>
